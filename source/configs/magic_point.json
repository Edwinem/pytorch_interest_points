{
  "name": "synthetic_shapes",
  "n_gpu": 1,
  "gpu_list": [1],
  "model": {
    "type": "MagicPointModel",
    "args": {}
  },
  "data_loader": {
    "type": "SyntheticDataLoader",
    "args": {
      "batch_size": 32,
      "shuffle": true,
      "validation_split": 0.0,
      "num_workers": 0,
      "pin_memory": true,
      "dataset_args": {
        "data_dir": "../data",
        "shuffle":true
      }
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "losses": [
    {
      "type": "DetectorLoss",
      "weight": 1,
      "args": {
        "grid_size": 8
      }
    }
  ],
  "metrics": [
    "my_metric",
    "my_metric2"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "type": "MagicPointTrainer",
    "epochs": 30,
    "save_dir": "experiments/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboardX": true,
    "log_dir": "saved/runs",
    "log_step": 100
  },
  "primitives": "all",
  "truncate": {
    "draw_ellipses": 0.3,
    "draw_stripes": 0.2,
    "gaussian_noise": 0.1
  },
  "cache_in_memory": true,
  "validation_size": 500,
  "suffix": "v6",
  "add_augmentation_to_test_set": false,
  // set to true to evaluate with noise
  "preprocessing": {
    "blur_size": 21,
    "resize": [
      120,
      160
    ]
  },
  "augmentation": {
    "photometric": {
      "enable": true,
      "primitives": [
        "random_brightness",
        "random_contrast",
        "additive_speckle_noise",
        "additive_gaussian_noise",
        "additive_shade",
        "motion_blur"
      ],
      "params": {
        "random_brightness": {
          "max_abs_change": 75
        }
      },
      "random_contrast": {
        "strength_range": [
          0.3,
          1.8
        ]
      },
      "additive_gaussian_noise": {
        "stddev_range": [
          0,
          15
        ]
      },
      "additive_speckle_noise": {
        "prob_range": [
          0,
          0.0035
        ]
      },
      "additive_shade": {
        "transparency_range": [
          -0.5,
          0.8
        ]
      },
      "kernel_size_range": [
        50,
        100
      ],
      "motion_blur": {
        "max_kernel_size": 7
      }
    },
    "homographic": {
      "enable": true,
      "params": {
        "translation": true,
        "rotation": true,
        "scaling": true,
        "perspective": true,
        "scaling_amplitude": 0.2,
        "perspective_amplitude_x": 0.2,
        "perspective_amplitude_y": 0.2,
        "patch_ratio": 0.8,
        "max_angle": 1.57,
        // 3.14
        "allow_artifacts": true,
        "translation_overflow": 0.05
      },
      "valid_border_margin": 2
    }
  }
}